<%= render 'shared/navbar' %>

<div class="container">
    <table class="table">
        <thead>
            <tr>
                <th><%= sort_link(@q, :title, 'Title') %></th>
                <th>Author</th>
                <th>Status</th>
                <th>Lending Date</th>
                <th>Return Date</th>
                <th colspan="3"></th>
            </tr>
        </thead>
        <tbody>
            <% @books.each do |book| %>
                <tr> 
                    <td><%= book.title %></td>
                    <td><%= book.author %></td>
                    <td><%= book.status %></td>
                    <td><%= book.lending_date %></td>
                    <td><%= book.return_date %></td>
                    <td><%= link_to 'Show', book %></td>
                    <td><%= link_to 'Edit', book_edit_path(book.id) %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <%= link_to 'New entry', books_new_path, class: 'btn btn-success' %>
</div>